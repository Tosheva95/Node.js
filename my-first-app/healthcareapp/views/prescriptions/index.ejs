<%- include('../partials/header') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/prescriptions.css" />


<div class="card">
  <form class="showcase">
    <h3 class="header">Prescriptions</h3><br/>
    <div action="/prescriptions" method="GET" class="form-inline">
      <div class="form-inline">
        <a href="/prescriptions/create" class="btn btn-primary">Add</a>
        <input type="text" name="search" placeholder="Search prescriptions" class="form-input">
        <input type="submit" value="Search" class="btn btn-primary">
      </div>
    </div>
    <div class="class">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Date</label>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
        <label class="form-check-label" for="flexSwitchCheckChecked">Name of medicine</label>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
        <label class="form-check-label" for="flexSwitchCheckChecked">Directions</label>
      </div>
    </div>
    <table class="table table-hover">
      <thead class="titles">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Patient Name</th>
          <th scope="col">Name of medicine</th>
          <th scope="col">Directions</th>
          <th scope="col">Doctor</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% prescriptions.forEach(prescription => { %>
        <tr>
          <th scope="row"><%= prescription.date %></th>
          <td><%= prescription.patient ? prescription.patient.full_name : 'N/A' %></td>
          <td><%= prescription.medicine_name %></td>
          <td><%= prescription.directions %></td>
          <td><%= prescription.doctor ? prescription.doctor.full_name : 'N/A' %></td>
          <td>
            <a href="/prescriptions/<%= prescription._id %>" class="btn btn-warning">Edit</a>
            <button type="button" onclick="deletePrescription(`<%= prescription._id %>`)" class="btn btn-danger">Delete</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </form>
</div>
<%- include('../partials/footer') %>