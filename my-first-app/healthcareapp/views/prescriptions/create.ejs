<%- include('../partials/header') %>

<% if (typeof error != 'undefined') { %>
  <div class="alert alert-danger" role="alert">
    <%= error %>
  </div>
  <% } %>
  <form action="/prescriptions" method="POST" class="add-card">
    <div class="mb-3">
      <label for="date" class="form-label">Date</label>
      <input type="text" class="form-control" id="date" name="date"
        value="<%= typeof date != 'undefined' ? date : '' %>" aria-describedby="date">
      <small>01/01/2000</small>
    </div>
    <div class="mb-3">
      <select class="select-patient form-control" name="patients">
        <option></option>
        <% patients.forEach(patient => { %>
          <option value="<%= patient._id %>"><%= patient.full_name %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label for="medicine_name" class="form-label">Name of medicine</label>
      <input type="text" class="form-control" id="medicine_name" name="medicine_name"
        value="<%= typeof medicine_name != 'undefined' ? medicine_name : '' %>">
    </div>
    <div class="mb-3">
      <label for="directions" class="form-label">Directions</label>
      <input type="text" class="form-control" id="directions" name="directions"
        value="<%= typeof directions != 'undefined' ? directions : '' %>">
    </div>
    <div class="mb-3">
      <select class="select-doctor form-control" name="doctor">
        <option></option>
        <% doctors.forEach(doctor => { %>
          <option value="<%= doctor._id %>"><%= doctor.full_name %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/prescriptions" class="btn btn-secondary">Cancel</a>
  </form>
  <%- include('../partials/footer') %>